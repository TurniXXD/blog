{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "i18n.server.js", "i18n.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@locales/*": ["./app/data/locales/*"],
      "@components/*": ["./app/components/*"],
      "@data/*": ["./app/data/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
